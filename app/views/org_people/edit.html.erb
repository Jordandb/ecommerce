<div class="col-md-7 col-md-offset-3 main">
	<% provide(:title, "Edit user")%>
	<center><h1>Update your profile</h1></center>
	<%= form_for(@person) do |f| %>
		<%= render 'shared/error_messages' %>
		<div class="col-md-12">
			<% # Below will render our contactfields layout partial %>
			<%= render 'layouts/contactfields', f: f %>
			<% # We are NOT including the submit button in the partial because this way we can preserver and reuse the partial if we want to have another kind of submit button later in another form %>
			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
		</div>
	<% end %>
</div>